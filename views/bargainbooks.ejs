<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bargain Books</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    table {
      width: 50%;
      margin: 20px auto;
      border-collapse: collapse;
    }
    th, td {
      padding: 8px 12px;
      border: 1px solid #ccc;
    }
    th {
      background-color: #f2f2f2;
    }
    h1 {
      text-align: center;
    }
  </style>
</head>
<body>
  <h1>Bargain Books (Under £20)</h1>
  <table>
    <thead>
      <tr>
        <th>Book Name</th>
        <th>Price (£)</th>
      </tr>
    </thead>
    <tbody>
      <% bargainBooks.forEach(function(book) { %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.price %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<p><a href="/">Return to Home</a></p>

</body>
</html>
